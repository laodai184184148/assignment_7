<%- include('partials/head.ejs')%>

    <body>
        
        <%- include('partials/navigation.ejs')%>

            <!-- Page Content -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-3" style="margin-top: 25px;">
                        <%- include('partials/sidebar.ejs')%>
                    </div>
                    
                        <div class="col-lg-9">
                            <%- include('partials/carousel.ejs')%>

                                <div class="row">

                                    <% for(let p of prods) {%>

                                        <div class="col-lg-4 col-md-6 mb-4">
                                            <div class="card h-100">
                                                <a href="#"><img class="card-img-top" src="<%= p.imageURL%>" alt=""></a>
                                                <div class="card-body">
                                                    <h4 class="card-title">
                                                        <a href="/products/<%=p._id%>">
                                                            <%= p.title%>
                                                        </a>
                                                    </h4>
                                                    <h5>$
                                                        <%= p.price%>
                                                    </h5>
                                                    <!-- <p class="card-text">
                                                        <%= p.description%>
                                                    </p> -->
                                                </div>
                                                <div class="card-footer">
                                                    <a class="btn btn-primary" href="/products/<%=p._id%>" role="button">View Details</a>
                                                    
                                                    <a href="/add-to-cart/<%=p._id%>" class="btn btn-default pull-right" role="button"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Add to cart</a>
                                                </div>
                                            </div>
                                        </div>

                                        <%
                                    }
                                    %>

                                </div>
                                <!-- /.row -->
                        </div>
                        <!-- /.col-lg-9 -->
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container -->

            <%- include('partials/end.ejs')%>